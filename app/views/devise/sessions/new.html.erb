<div id="content">
  <!-- logo -->
  <div class="d-flex justify-content-center">
    <%= image_tag("logo_genx", height: '100', width: '100') %>
  </div>
  <div class="container .sign-in m-5">
    <h2 style="text-align: center;">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

  <div class="form-actions d-flex justify-content-between ml-5">
    <%= f.button :submit, "Log in", class: "btn btn-warning" %>
    <%= link_to "Home", experiences_path, class: "btn btn-warning" %>
<% end %>

<%= render "devise/shared/links" %>
  </div>
  </div>
