<%= render "/pages/navbar" %>
    <!-- Page content is displayed _content.html.erb -->
<div id="content">
  <!-- logo -->
  <div class="d-flex justify-content-center">
    <%= link_to root_path do %>
    <%= image_tag("logo_genx", height: '100', width: '100') %>
    <% end %>
  </div>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid justify-content-center" style="box-shadow: 0 0 5px rgba(0,0,0,0.2);">
            <!-- Filter button -->
            <h2 style="margin: 5px;">Experiences I booked</h2>
            <div>

            </div>
        </div>
    </nav>
    <!-- The Cards -->
    <% if @meetings.count == 0 %>
    <div class="m-3">
      <h3>Book a meeting with one of our community members. We promise you won't regret it!</h3>
    </div>
    <div style="text-align: center">
      <%= link_to "See members!", experiences_path, class: "btn btn-warning" %>
    </div>
    <% else %>
    <div class="cards container m-5">
      <% @meetings.each do |meeting| %>

            <div class="card-trip">
              <img src="https://kitt.lewagon.com/placeholder/users/random" />
              <div class="card-trip-infos">
                <div>
                  <h2><%= "#{meeting.experience.first_name} #{meeting.experience.last_name}" %></h2>
                  <p><%= "#{meeting.experience.age} years" %></p>
                </div>
                <div>
                <h2 class="card-trip-pricing"><%= "Date: #{meeting.scheduled_time.strftime("%m/%d/%Y")}" %></h2>
                <p><%= "From: #{meeting.scheduled_time.strftime("%I:%M%p")} To: #{(meeting.scheduled_time.to_time + 2.hours).to_datetime.strftime("%I:%M%p")}" %></p>
                </div>
              </div>
              <%#= link_to "Book a Meeting", new_experience_meeting_path(experience), class: "btn btn-primary justify-content-center" %>
            </div>

        <% end %>
    </div>
    <% end %>
</div>
