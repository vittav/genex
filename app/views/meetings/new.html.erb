<%= render "/pages/navbar" %>
<div class="d-flex justify-content-center">
    <%= link_to root_path do %>
    <%= image_tag("logo_genx", height: '100', width: '100') %>
    <% end %>
  </div>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <!-- Filter button -->
            <div>
                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="#"><i class="fas fa-filter"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
<div id="content" class="justify-content-center">
  <% if @experience.photo.nil? %>
      <%= "Hi" %>
  <% end %>
  <% @experience.gender == "Male" ? mr= "Mr." : mr = "Mrs." %>
<div class="d-flex justify-content-center" style="width: 100px auto;">
    <div>
  <h2>Book a meeting with <%= mr %><%= @experience.first_name %> <%= @experience.last_name %></h3>
      <h4> You will be able to talk in <%= @experience.languages.first.name %> and maybe even discuss about <%= @experience.skills.first.name %></h4>
    <%= simple_form_for [@experience, @meeting] do |f| %>
      <%= f.input :location %>
      <%= f.input :scheduled_time, as: :string, required: true, input_html: {class: "datepicker"} %>
      <div class="d-flex justify-content-between">
        <%= f.button :submit, label: "Hi", class: "btn btn-info" %>
      </div>
    <% end %>
    </div>
</div>

</div>
